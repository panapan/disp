<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Quality</th>
      <th>Time</th>
      <th>Rate</th>
      <th>Units</th>
      <th>Label</th>
      <th>Description</th>
      <th>Enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.value %></td>
        <td><%= item.quality %></td>
        <td><%= item.time %></td>
        <td><%= item.rate %></td>
        <td><%= item.units %></td>
        <td><%= item.label %></td>
        <td><%= item.description %></td>
        <td><%= item.enabled %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

